<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence                  
                                http://java.sun.com/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="SmoossPU">
 	
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>com.aplose.smooss.model.CarPoolingModule</class>
		<class>com.aplose.smooss.model.BringModule</class>
		<class>com.aplose.smooss.model.PicturesModule</class>
		<class>com.aplose.smooss.model.PlaylistModule</class>
		<class>com.aplose.smooss.model.Url</class>
		<class>com.aplose.smooss.model.Playlist</class>
		<class>com.aplose.smooss.model.CarPooling</class>
		<class>com.aplose.smooss.model.Comment</class>
		<class>com.aplose.smooss.model.Picture</class>
		<class>com.aplose.smooss.model.Module</class>
		<class>com.aplose.smooss.model.Event</class>
		<class>com.aplose.smooss.model.User</class>
        <properties>
	        <property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:test"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <property name="javax.persistence.jdbc.password" value=""/>
           	<property name="javax.persistence.schema-generation.database.action" value="create"/>
        </properties>
	
  </persistence-unit>
</persistence>